		final DefaultTableModel model2 = new DefaultTableModel();
		final JTable table2 = new JTable(10, 3);
		table2.setBounds(12, 120, 297, 278);
		model2.setColumnIdentifiers(new String[] { "", "", "", "", });
		table2.setVisible(true);
